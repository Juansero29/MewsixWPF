<Window x:Class="Mewsix.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:Mewsix.Helpers;assembly=Mewsix.Helpers"
        xmlns:vm="clr-namespace:Mewsix.ViewModels;assembly=Mewsix.ViewModels"
       
        mc:Ignorable="d"
        Title="Mewix" Height="379" Width="497.9">

    <Window.Resources>
        <conv:TabSizeConverter x:Key="tabSizeConverter" />
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Width">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource tabSizeConverter}">
                        <Binding RelativeSource="{RelativeSource Mode=FindAncestor,
            AncestorType={x:Type TabControl}}" />
                        <Binding RelativeSource="{RelativeSource Mode=FindAncestor,
            AncestorType={x:Type TabControl}}" Path="ActualWidth" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="20"/>
            <EventSetter Event="KeyDown" Handler="TextBox_KeyDown"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="VerticalAlignment" Value="Top"/>

        </Style>
    </Window.Resources>


    <Grid d:DataContext="{d:DesignInstance vm:MainWindowViewModel, IsDesignTimeCreatable=True}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" MinWidth="210"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>

        <DockPanel>

            <Button Name="Button_Add" DockPanel.Dock="Bottom" Click="Button_Add_Click">Add music</Button>

            <ListView SelectedItem="{Binding SelectedTrack, Mode=TwoWay}" Grid.Column="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                  ItemsSource="{Binding Tracks}" MinWidth="200" SelectionChanged="ListView_SelectionChanged">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="0,0,0,1.5" BorderBrush="#FFE8E8E8" Background="White">
                            <Grid Margin="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="8*"/>
                                </Grid.ColumnDefinitions>

                                <Viewbox Grid.Column="0"  MaxWidth="80">
                                    <Image Source="{Binding AlbumUri}" Stretch="UniformToFill"/>
                                </Viewbox>

                                <Grid Margin="4" Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5*"/>
                                        <RowDefinition Height="5*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock VerticalAlignment="Bottom" Text="{Binding Title}" Grid.Row="0" Margin="0,0,0,4" FontFamily="Calibri Light" FontSize="14"/>
                                    <TextBlock VerticalAlignment="Top" Text="{Binding Artist}" Grid.Row="1" Margin="0,0,0,4" FontFamily="Cambria Math" FontWeight="Bold"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </DockPanel>

        <!--   RIGHT PART OF THE SCREEN  -->



        <DockPanel Grid.Column="1"  >

            <Grid DockPanel.Dock="Bottom" Height="48" Background="Aquamarine">
                <Label Content="Space for the Musix Player Controls"></Label>
                <Grid Margin="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>

                    </Grid.ColumnDefinitions>

                    <Button Margin="6" Grid.Column="0" Name="Button_Previous" Click="Button_Previous_Click">Previous</Button>
                    <Button Margin="6" Grid.Column="1" Name="Button_Play" Click="Button_Play_Click">Play</Button>
                    <Button Margin="6" Grid.Column="2" Name="Button_Next" Click="Button_Next_Click">Next</Button>

                </Grid>
            </Grid>

            <TabControl SelectionChanged="TabControl_SelectionChanged">
                <TabItem Header="Lyrics">
                    <TextBlock Grid.Column="1" Text="{Binding Lyrics}"/>
                </TabItem>
                <TabItem Header="Info">
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>

                        </Grid.RowDefinitions>


                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Text="Track title : "/>
                            <TextBox Text="{Binding SelectedTrack.Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <TextBlock Text="Artist name : "/>
                            <TextBlock Text="{Binding SelectedTrack.Artist, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <TextBlock Text="Album : "/>
                            <TextBox Text="{Binding SelectedTrack.Album, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Orientation="Horizontal">
                            <TextBlock Text="Year : "/>
                            <TextBox Text="{Binding SelectedTrack.Year, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="4" Orientation="Horizontal">
                            <TextBlock Text="Lyrics : "/>
                            <TextBlock Text="{Binding SelectedTrack.Lyrics, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>



                    </Grid>

                </TabItem>

            </TabControl>

        </DockPanel>

    </Grid>

</Window>
